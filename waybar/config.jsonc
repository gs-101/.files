{
    // General Configuration
    "layer": "top",
    "position": "top",
    "modules-left": [
    "sway/workspaces",
    "hyprland/workspaces",
    "custom/media"
    ],
    "modules-center": [
    "sway/window",
    "hyprland/window",
    "river/window"
    ],
    "modules-right": [
    "pulseaudio",
    "backlight",
    "battery",
    "network",
    "clock",
    "tray",
    "custom/power"
    ],
    // Module configuration
    "sway/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "warp-on-scroll": true,
    "format": "{icon}",
    "format-icons": {
                    "1": "󰆍",
                    "2": "󰅴",
                    "3": "󰖟",
                    "4": "󰝚"
                    }
    },
    "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "warp-on-scroll": true,
    "format": "{icon}",
    "format-icons": {
                   "1": "󰆍",
                   "2": "󰅴",
                   "3": "󰖟",
                   "4": "󰝚"
                   }
    },
    "hyprland/window": {
    "separate-outputs": true
    },
    "tray": {
        // "icon-size": ,
        "spacing": 10
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<small>{calendar}</small>",
        // "format": "󰥔 {:%r}",
        "format": "󰥔 {:%I:%M %p}",
        "format-alt": "{:%Y-%m-%d}"
    },
    "backlight": {
        // "device": ,
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
        },
    "battery": {
        "states": {
            // "good": ,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "󱐋 {capacity}%",
        "format-plugged": "󱘖 {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["󰁺", "󰁼", "󰁾", "󰂀", "󰁹"]
    },
    "network": {
        "format-wifi": "󰖩 {essid} ({signalStrength}%)",
        "format-ethernet": "󰈁 {ifname}",
        "tooltip-format": "󰄬 Connected",
        "format-linked": "󰌷 {ifname}",
        "format-disconnected": " Disconnected"
        },
    "pulseaudio": {
        "scroll-step": 1.0,
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{icon}󰂯 {volume}% {format_source}",
        "format-bluetooth-muted": "󰝟",
        "format-muted": "󰝟",
        "format-source": "󰍬 {volume}%",
        "format-source-muted": "󰍭",
        "format-icons": {
            "headphone": "󰋋",
            "hands-free": "󱡏",
            "headset": "󰋎",
            "phone": "󰏲",
            "portable": "󰄜",
            "car": "󰄋",
            "default": ["󰕿", "󰖀", "󰕾"]
        }
        // "on-click": "pavucontrol"
    },
    "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "󰝟",
    "format-source": "{volume}%",
    "format-icons": {
    "headphone": "󰋋",
    "default": ["󰕿", "󰖀", "󰕾"]
    }
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "default": "󰝚"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
        },
    "custom/power": {
        "format" : "⏻ ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml",
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot"
		}
    }
}
